# Environment Configuration
NODE_ENV=development

# Application URLs
BASE_URL=https://demowebshop.tricentis.com
DEV_URL=https://dev-demowebshop.tricentis.com
STAGE_URL=https://stage-demowebshop.tricentis.com
PROD_URL=https://demowebshop.tricentis.com

# API Configuration
API_BASE_URL=https://api.demowebshop.tricentis.com
API_VERSION=v1
API_TIMEOUT=30000
API_RETRY_ATTEMPTS=3
API_RATE_LIMIT=100

# Browser Configuration
BROWSER=chromium
HEADLESS=false
VIEWPORT_WIDTH=1280
VIEWPORT_HEIGHT=720
DEVICE_SCALE_FACTOR=1
USER_AGENT=Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36

# Mobile Device Configuration
MOBILE_DEVICES=iPhone 12,iPhone 12 Pro,Samsung Galaxy S21,Google Pixel 5
TABLET_DEVICES=iPad Pro,iPad Air,Samsung Galaxy Tab S7

# Test Configuration
TIMEOUT=30000
RETRY_ATTEMPTS=2
PARALLEL_WORKERS=4
SLOW_TEST_THRESHOLD=5000
SCREENSHOT_ON_FAILURE=true
VIDEO_ON_FAILURE=true
TRACE_ON_FAILURE=true

# Performance Configuration
PERFORMANCE_THRESHOLD=3000
LIGHTHOUSE_THRESHOLD=90
ACCESSIBILITY_THRESHOLD=95
SEO_THRESHOLD=90
BEST_PRACTICES_THRESHOLD=90

# Test Data
TEST_USER_EMAIL=testuser@example.com
TEST_USER_PASSWORD=Test123!
ADMIN_USER_EMAIL=admin@example.com
ADMIN_USER_PASSWORD=Admin123!
API_KEY=your-api-key-here
API_SECRET=your-api-secret-here

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=testdb
DB_USER=testuser
DB_PASSWORD=testpass

# Reporting
REPORT_PATH=./reports
SCREENSHOT_PATH=./reports/screenshots
VIDEO_PATH=./reports/videos
TRACE_PATH=./reports/traces
ALLURE_RESULTS_PATH=./reports/allure-results
PERFORMANCE_RESULTS_PATH=./reports/performance

# Notification Configuration
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK
TEAMS_WEBHOOK_URL=https://your-org.webhook.office.com/webhookb2/YOUR/TEAMS/WEBHOOK
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASSWORD=your-app-password
EMAIL_TO=team@company.com

# Security Configuration
ENCRYPTION_KEY=your-encryption-key-here
JWT_SECRET=your-jwt-secret-here
SSL_VERIFY=true
CERT_PATH=./certs

# Visual Testing Configuration
VISUAL_BASELINE_PATH=./baselines
VISUAL_THRESHOLD=0.1
VISUAL_MISMATCH_TOLERANCE=5

# Accessibility Configuration
ACCESSIBILITY_RULES=wcag2a,wcag2aa
ACCESSIBILITY_LEVEL=AA
ACCESSIBILITY_IGNORE_RULES=color-contrast

# Logging Configuration
LOG_LEVEL=info
LOG_FILE_PATH=./logs
LOG_MAX_SIZE=10m
LOG_MAX_FILES=5

# Docker Configuration
DOCKER_IMAGE=automation-framework
DOCKER_TAG=latest
DOCKER_PORT=3000

# CI/CD Configuration
CI_ENVIRONMENT=github
BUILD_NUMBER=1
BRANCH_NAME=main
COMMIT_SHA=abc123 